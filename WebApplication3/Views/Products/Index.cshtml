@model IEnumerable<WebApplication3.Models.Product>
@{
    ViewBag.Title = "Cloth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cloth</h2>

<br />
<br />
<br />
<br />



<div class="col-xs-12 col-md-9">
    <div class="row">


        @foreach (var product in Model)
        {

            <div class="col-xs-12 col-md-3">
                <div class="thumbnail">
                    @if (product.ProductId == 8)
                    {
                        <img class="img-responsive" src="~/Content/socks_PNG8249.png">
                    }
                    else if (product.ProductId == 9)
                    {
                        <img class="img-responsive" src="~/Content/Ra2cc2158ca6975382598dee9c2f7a6b8.png">
                    }
                    else if (product.ProductId == 10)
                    {
                        <img class="img-responsive" src="~/Content/R84264d5d801c67e3f8509b9a7ccdf1af.png">
                    }
                    else if (product.ProductId == 11)
                    {
                        <img class="img-responsive" src="~/Content/leather_jacket_PNG48.png">
                    }
                    else if (product.ProductId == 12)
                    {
                        <img class="img-responsive" src="~/Content/Moodring_-_Crop_Tee_Mockup_700x.png">
                    }
                    else if (product.ProductId == 13)
                    {
                        <img class="img-responsive" src="~/Content/b7ffad8bf4fe8c59c4bf888020c4ac23.jpg">
                    }

                    else if (product.ProductId == 14)
                    {
                        <img class="img-responsive" src="~/Content/Rf9ca7f643cf335b46c0c32d3efc49ea4.png">
                    }
                    else if (product.ProductId == 15)
                    {
                        <img class="img-responsive" src="~/Content/R65321c2859b5f7b1458ea08ba33911f0.png">
                    }
                              <div class="caption text-center">
                        <p>
                            <b>Name:</b> <span>@product.ProductTitle</span>
                        </p>
                        <p>
                            <b>Price:</b> <span>@product.ProductPrice USD</span>
                        </p>
                        <p class="text-center">
                            <button type="button" class="like-button" title="Click to like this post!">
                                <i class="fa fa-thumbs-up"></i> Like

                                <span class="like-count"></span>
                            </button>
                        </p>
                    </div>
                </div>
            </div>
            <style>
                .like-button {
                    background-color: white;
                    color: black;
                }

                    .like-button:hover {
                        background-color: red;
                        color: black;
                    }
            </style>

        }
    </div>
    </div>
        

