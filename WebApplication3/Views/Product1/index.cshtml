@model IEnumerable<WebApplication3.Models.Product1>

@{
    ViewBag.Title = "Product1";
}

<h2>Product1</h2>

<div class="col-xs-12 col-md-9">
    <div class="row">


        @foreach (var product1 in Model)
        {


            <div class="col-xs-12 col-md-3">
                <div class="thumbnail">
                    @if (product1.ProductId == 1)
                    {
                        <img class="img-responsive" src="~/Content/R78787d615507a4c1d860136a98aa52ac.png">
                    }
                    else if (product1.ProductId == 3)
                    {
                        <img class="img-responsive" src="~/Content/Rf3a1df735fbc3f977969868bba614ea2.png">
                    }
                    else if (product1.ProductId == 4)
                    {
                        <img class="img-responsive" src="~/Content/running_shoes_PNG5817.png">
                    }


                    <div class="caption text-center">
                        <p>
                            <b>Name:</b> <span>@product1.ProductTitle</span>
                        </p>
                        <p>
                            <b>Price:</b> <span>@product1.ProductPrice USD</span>
                        </p>
                        <p class="text-center">
                            <button type="button" class="like-button" title="Click to like this post!">
                                <i class="fa fa-thumbs-up"></i> Like

                                <span class="like-count"></span>
                            </button>
                        </p>
                    </div>
                </div>
            </div>
            <style>
                .like-button {
                    background-color: white;
                    color: black;
                }

                    .like-button:hover {
                        background-color: red;
                        color: black;
                    }
            </style>
        }
    </div>
</div>
